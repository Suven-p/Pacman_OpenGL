{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Freeglut project",
			"windows": {
				"command": "mingw32-make SHELL=cmd"
			},
			"linux": {
				"command": "make"
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "Compile a freeglut project"
		},
		{
			"label": "Run freeglut project",
			"dependsOn": [
				"Freeglut project"
			],
			"dependsOrder": "sequence",
			"windows": {
				"command": "bin\\${workspaceFolderBasename}.exe"
			},
			"linux": {
				"command": "./bin/${workspaceFolderBasename}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}