{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Freeglut project",
			"command": "cmake --build build",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "Compile a freeglut project"
		},
		{
			"label": "Run freeglut project",
			"dependsOn": [
				"Freeglut project"
			],
			"dependsOrder": "sequence",
			"windows": {
				"command": "bin\\Pacman.exe"
			},
			"linux": {
				"command": "./bin/Pacman"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}